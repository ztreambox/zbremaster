	<keyboard>
	  <!-- XBMC Commander fix -->
	  <ampersand>Up</ampersand>
	  <leftbracket>Down</leftbracket>
	  <percent>Left</percent>
	  <quote>Right</quote>
	</keyboard>
	<remote>
      <play>Play</play>
      <pause>Pause</pause>
      <stop>Stop</stop>
      <forward>FastForward</forward>
      <reverse>Rewind</reverse>
      <left>Left</left>
      <right>Right</right>
      <up>Up</up>
      <down>Down</down>
      <select>Select</select>
      <enter>FullScreen</enter> 
      <pageplus>PageUp</pageplus>
      <pageminus>PageDown</pageminus>
      <back>ParentDir</back>
      <menu>PreviousMenu</menu>
      <guide>ContextMenu</guide>
      <info>Info</info>
      <skipplus>SkipNext</skipplus>
      <skipminus>SkipPrevious</skipminus>
      <display>FullScreen</display>
      <!--  <start>PreviousMenu</start> -->
      <start>XBMC.ActivateWindow(Home)</start> <!-- springt immer zurueck zum Home-Menue -->
      <record>Screenshot</record>
      <volumeplus>VolumeUp</volumeplus>
      <volumeminus>VolumeDown</volumeminus>
      <mute>Mute</mute>
      <!--  <power>XBMC.ShutDown()</power> -->
      <power>ActivateWindow(shutdownmenu)</power> <!-- faehrt nicht mehr direkt herunter, sondern ruft das Shutdownmenue auf -->
